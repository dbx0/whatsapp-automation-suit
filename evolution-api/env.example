# ============================================================================
# EVOLUTION API - ENVIRONMENT VARIABLES
# ============================================================================
# Configurações específicas para a Evolution API
# Copie este arquivo para .env e configure conforme necessário
# ============================================================================

# ============================================================================
# AUTHENTICATION
# ============================================================================

# Chave de autenticação da API (OBRIGATÓRIO - Gere uma chave UUID)
# Use: uuidgen ou https://api-keygen.com/
AUTHENTICATION_API_KEY=GENERATE_YOUR_API_KEY_HERE

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Configurações do PostgreSQL
DATABASE_ENABLED=true
DATABASE_CONNECTION_URI=postgresql://postgres:evolution_secure_password@postgres-evolution:5432/evolution
DATABASE_CONNECTION_LIMIT=10

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Configurações do Redis
REDIS_ENABLED=true
REDIS_URI=redis://redis-evolution:6379
REDIS_PREFIX_KEY=evolution

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Configurações do servidor
SERVER_URL=http://localhost:8080
SERVER_PORT=8080
SERVER_CORS_ORIGIN=*
SERVER_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
SERVER_CORS_CREDENTIALS=true

# ============================================================================
# LOG CONFIGURATION
# ============================================================================

# Configurações de log
LOG_LEVEL=ERROR
LOG_COLOR=true
LOG_BAILEYS=error

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================

# Configurações de webhook
WEBHOOK_BY_EVENTS=false
WEBHOOK_GLOBAL_URL=
WEBHOOK_GLOBAL_ENABLED=false

# ============================================================================
# CHATWOOT INTEGRATION
# ============================================================================

# Configurações de integração com Chatwoot
CHATWOOT_ENABLED=true
CHATWOOT_URL=http://chatwoot-rails:3000
CHATWOOT_TOKEN=
CHATWOOT_ACCOUNT_ID=

# ============================================================================
# WHATSAPP CONFIGURATION
# ============================================================================

# Configurações do WhatsApp
WHATSAPP_DEFAULT_ANSWER=Olá! Como posso ajudá-lo?
WHATSAPP_GROUP_LIMIT=256
WHATSAPP_MESSAGE_DELAY=2000
WHATSAPP_READ_MESSAGE=true
WHATSAPP_READ_MESSAGE_IN_ME=true
WHATSAPP_SYNC_FULL_HISTORY=false

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Configurações de upload de arquivos
FILE_UPLOAD_ENABLED=true
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mp3,application/pdf

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Configurações de segurança
ENABLE_WHITELIST=false
WHITELIST_MODE=ALLOW
WHITELIST_IPS=

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Configurações de performance
CONFIG_SESSION_PHONE_CLIENT=Evolution API
CONFIG_SESSION_PHONE_NAME=Chrome
CONFIG_SESSION_PHONE_VERSION=2.3000.1024363850
CONFIG_SESSION_PHONE_PLATFORM=Chrome
CONFIG_SESSION_PHONE_WHATSAPP_VERSION=2.2402.5

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Configurações para desenvolvimento
DEBUG_MODE=false
ENABLE_DEBUG_LOGS=false
ENABLE_METRICS=false
